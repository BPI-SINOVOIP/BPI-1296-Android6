choice
	prompt "Target System"
	default TARGET_ar71xx
	reset if !DEVEL
	
config TARGET_rtd1295
	bool "Realtek RTD1295"
	select HAS_SUBTARGETS


endchoice

choice
	prompt "Subtarget" if HAS_SUBTARGETS

config TARGET_rtd1295_nas_emmc
	bool "RTD1295 NAS with eMMC"
	select LINUX_4_1
	depends on TARGET_rtd1295
	select DISPLAY_SUPPORT
	select USES_DEVICETREE
	select GPIO_SUPPORT
	select PCI_SUPPORT
	select USES_SQUASHFS
	select USB_SUPPORT
	select aarch64
	help
	  Build pure NAS firmware image for Realtek RTD1295 SoC devices.
	  Currently produces eMMC image for Giraffe board.


config TARGET_rtd1295_mnas_emmc
	bool "RTD1295 media NAS with eMMC"
	select LINUX_4_1
	depends on TARGET_rtd1295
	select DISPLAY_SUPPORT
	select USES_DEVICETREE
	select GPIO_SUPPORT
	select PCI_SUPPORT
	select USES_SQUASHFS
	select USB_SUPPORT
	select aarch64
	help
	  Build media NAS firmware image for Realtek RTD1295 SoC devices.
	  Currently produces eMMC image for Giraffe board.


config TARGET_rtd1295_gmnas_emmc
	bool "RTD1295 generic media NAS with eMMC"
	select LINUX_4_1
	depends on TARGET_rtd1295
	select DISPLAY_SUPPORT
	select USES_DEVICETREE
	select GPIO_SUPPORT
	select PCI_SUPPORT
	select USES_SQUASHFS
	select USB_SUPPORT
	select aarch64
	help
	  Build NAS firmware image with transcode for Realtek RTD1295 SoC devices.
	  Currently produces eMMC image for Giraffe board.


endchoice

