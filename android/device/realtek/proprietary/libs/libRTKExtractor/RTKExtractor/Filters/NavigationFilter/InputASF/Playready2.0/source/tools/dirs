    errsay{!_WINCEROOT,!PPC}           \
    headerverify{!_WINCEROOT,!PPC}     \
    metering{!_WINCEROOT,!PPC}         \
    player{!_WINCEROOT,!PPC}           \
    synclist{!_WINCEROOT,!PPC}         \
    devicedevcert{!_WINCEROOT,!PPC}    \
    profilescope{!_WINCEROOT,!PPC}     \
    otadla{!_WINCEROOT,!PPC}           \
    metercertstore{!_WINCEROOT,!PPC}   \
    secure_clock{!_WINCEROOT,!PPC}     \
    drmfileviewer{!_WINCEROOT,!PPC}    \
    embeddingtool{!_WINCEROOT,!PPC}    \
    tracetool{!_WINCEROOT,!PPC}        \
    calcchecksum{!_WINCEROOT,!PPC}     \
    deviceexclusion{!_WINCEROOT,!PPC}  \
    drmviewer{!_WINCEROOT,!PPC}        \
    keyfile{!_WINCEROOT,!PPC}          \
    package{!PPC}                      \
    perfxml{!PPC}                      \

