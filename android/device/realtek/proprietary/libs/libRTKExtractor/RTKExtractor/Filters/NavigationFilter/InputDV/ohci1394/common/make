include ../../../../../../include/MakeConfig
rm=/bin/rm -f
CC= $(MYCC)
LINK= -=LINK=-
DEFS=  
AR= $(MYAR) cq
RANLIB= $(MYRANLIB)

INCLUDES= -I../../../Include -L/usr/local/lib

DEFINES= $(INCLUDES) $(DEFS) -DSYS_UNIX=1
CFLAGS= $(DEFINES) $(COMPILE_OPT)
CFLAGS+= -g
ifeq ($(__NAV_USE_DLL_PLUGIN__), YES)
LIBNAME= ../../../../lib/1394com.so
CFLAGS+= -fPIC -D__NAV_USE_DLL_PLUGIN_ _
else
LIBNAME= ../../../../lib/lib1394com.a
endif

SRCS = raw1394util.c
OBJS = raw1394util.o


.cpp.o:
	$(rm) -f $@
	$(CC) $(CFLAGS) $(DEBUGFLAG) -c $*.cpp

all: $(LIBNAME)

ifeq ($(__NAV_USE_DLL_PLUGIN__), YES)
$(LIBNAME) : $(OBJS)
	$(rm) $@
	$(CC) -shared -o $(LIBNAME) $(OBJS)
else
$(LIBNAME) : $(OBJS)
	$(rm) $@
	$(AR) $@ $(OBJS)
	$(RANLIB) $@
endif

clean:
	$(rm) $(OBJS) $(LIBNAME) core *~
