<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.realtek.floatingwindow"
    android:sharedUserId="android.uid.system"
    android:versionCode="1"
    android:versionName="1.0" >
    <!-- permission to receive boot completed -->
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"/>
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-feature android:name="android.hardware.camera" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name">
        <!-- BOOT_COMPLETED receiver -->
        <receiver android:enabled="true"
            android:name="com.realtek.floatingwindow.BootCompleteReceiver">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED"/>
            </intent-filter>
        </receiver>

        <!-- start floatingwindow broadcast receiver -->
        <receiver android:enabled="true"
            android:name="com.realtek.floatingwindow.LunchServiceReceiver">
            <intent-filter>
                <action android:name="android.intent.action.LUNCH_FW_SERVICE"/>
                <action android:name="android.intent.action.STOP_FW_SERVICE"/>
            </intent-filter>
        </receiver>

        <service android:enabled="true"
            android:name="com.realtek.floatingwindow.FloatingWindowService" >
        </service>
        <service android:enabled="true"
            android:name="com.realtek.floatingwindow.BackgroundRecordService" >
        </service>

        <!-- new designed service with flexiable capability -->
        <service android:enabled="true"
            android:name="com.realtek.floatingwindow.FloatingWindowService2" >
        </service>

        <activity
            android:name="com.realtek.floatingwindow.MainActivity2"
            android:theme="@android:style/Theme.Holo.Light"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
                <category android:name="android.intent.category.LEANBACK_LAUNCHER" />
            </intent-filter>
        </activity>
    </application>
</manifest>
