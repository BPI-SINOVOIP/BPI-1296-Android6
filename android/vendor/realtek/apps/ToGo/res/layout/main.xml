<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ToGoActivity" >

    <Button
        android:id="@+id/btBindService"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="@string/bind_service" />

    <Button
        android:id="@+id/btUnbindService"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btBindService"
        android:layout_toRightOf="@+id/btBindService"
        android:text="@string/unbind_service" />

    <Button
        android:id="@+id/btQueryall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/btBindService"
        android:text="@string/queryall" />

    <Button
        android:id="@+id/btInitCamera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/btQueryall"
        android:text="@string/init_camera" />

    <Button
        android:id="@+id/btInitFile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btInitCamera"
        android:layout_toRightOf="@+id/btInitCamera"
        android:text="@string/init_file" />

    <Button
        android:id="@+id/btInitDtv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btInitFile"
        android:layout_alignBottom="@+id/btInitFile"
        android:layout_toRightOf="@+id/btInitFile"
        android:text="@string/init_dtv" />

    <Button
        android:id="@+id/btStopClient0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btInitCamera"
        android:layout_below="@+id/btStartClient0"
        android:text="@string/stop_client_0" />

    <Button
        android:id="@+id/btConfigOutToFile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btInitCamera"
        android:layout_below="@+id/btInitCamera"
        android:text="@string/config_out_to_file" />

    <Button
        android:id="@+id/btStartClient0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/btConfigOutToFile"
        android:text="@string/start_client_0" />

    <Button
        android:id="@+id/btStartClient1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btConfigOutToFile"
        android:layout_toRightOf="@+id/btStartClient0"
        android:text="@string/start_client_1" />

    <Button
        android:id="@+id/btStopClient1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btStopClient0"
        android:layout_alignBottom="@+id/btStopClient0"
        android:layout_alignLeft="@+id/btStartClient1"
        android:text="@string/stop_client_1" />

</RelativeLayout>